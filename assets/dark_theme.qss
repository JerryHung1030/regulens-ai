QPushButton#getStartedButton {
    font-size: 16px;
    font-weight: 500;
    padding: 12px 32px;
    border-radius: 4px;
    color: white;
    background-color: #1a73e8; /* Google Blue */
    border: none;
}

QPushButton#getStartedButton:hover {
    background-color: #1765cc;
}

QPushButton#getStartedButton:pressed {
    background-color: #1459b3;
}
